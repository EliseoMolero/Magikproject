<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent" android:layout_width="match_parent" android:orientation="vertical"   xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">


    <ScrollView android:layout_height="match_parent" android:layout_width="match_parent">

        <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context="com.example.ignacio.formulariologin.MainActivity">



            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_x="455dp"
                android:layout_y="209dp"
                android:text="E-mail*:"
                android:textSize="18sp"
                android:textColor="#333"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="126dp"
                android:layout_marginLeft="16dp"
                app:layout_constraintLeft_toLeftOf="parent" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/passtxt"
                android:layout_alignBottom="@+id/passtxt"
                android:layout_alignParentStart="true"
                android:textColor="#333"
                android:layout_x="455dp"
                android:layout_y="209dp"
                android:text="Contraseña*:"
                android:textSize="18sp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="181dp"
                android:layout_marginLeft="16dp"
                app:layout_constraintLeft_toLeftOf="parent" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/passtxt"
                android:layout_x="455dp"
                android:textColor="#333"
                android:layout_y="209dp"
                android:text="Confirmar Contraseña*:"
                android:textSize="14sp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="241dp"
                android:layout_marginLeft="16dp"
                app:layout_constraintLeft_toLeftOf="parent" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/email"
                android:layout_alignBottom="@+id/email"
                android:layout_alignParentStart="true"
                android:textColor="#333"
                android:layout_x="455dp"
                android:layout_y="209dp"
                android:text="Nombre*:"
                android:textSize="18sp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="293dp"
                android:layout_marginLeft="16dp"
                app:layout_constraintLeft_toLeftOf="parent" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/email"
                android:layout_x="455dp"
                android:layout_y="209dp"
                android:text="Apellido(s)*:"
                android:textColor="#333"
                android:textSize="18sp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="351dp"
                android:layout_marginLeft="16dp"
                app:layout_constraintLeft_toLeftOf="parent" />

            <EditText
                android:id="@+id/passtxt"
                android:layout_width="190dp"
                android:layout_height="40dp"
                android:ems="10"
                android:inputType="textPassword"
                android:layout_below="@+id/email"
                android:layout_alignParentEnd="true"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="170dp"
                android:layout_marginRight="16dp"
                app:layout_constraintRight_toRightOf="parent" />

            <EditText
                android:id="@+id/compasstxt"
                android:layout_width="190dp"
                android:layout_height="40dp"
                android:ems="10"
                android:inputType="textPassword"
                android:layout_alignBaseline="@+id/textView2"
                android:layout_alignBottom="@+id/textView2"
                android:layout_alignParentEnd="true"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="227dp"
                android:layout_marginRight="16dp"
                app:layout_constraintRight_toRightOf="parent" />

            <EditText
                android:id="@+id/email"
                android:layout_width="190dp"
                android:layout_height="40dp"
                android:ems="10"
                android:inputType="textEmailAddress"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="115dp"
                android:layout_marginRight="16dp"
                app:layout_constraintRight_toRightOf="parent" />

            <EditText
                android:id="@+id/nombretxt"
                android:layout_width="190dp"
                android:layout_height="40dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="Nombre"
                android:layout_below="@+id/compasstxt"
                android:layout_alignParentEnd="true"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="283dp"
                android:layout_marginRight="16dp"
                app:layout_constraintRight_toRightOf="parent" />

            <EditText
                android:id="@+id/apellidostxt"
                android:layout_width="190dp"
                android:layout_height="40dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="Apellidos"
                android:layout_alignBaseline="@+id/textView4"
                android:layout_alignBottom="@+id/textView4"
                android:layout_alignParentEnd="true"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="340dp"
                android:layout_marginRight="16dp"
                app:layout_constraintRight_toRightOf="parent" />

            <Button
                android:id="@+id/registrar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Registrarse"
                android:background="#333"
                android:textColor="#ffffff"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="429dp"
                android:layout_marginRight="16dp"
                app:layout_constraintRight_toRightOf="parent" />


            <Button
                android:id="@+id/infoboton"

                android:layout_width="38dp"
                android:layout_height="39dp"
                android:layout_marginLeft="16dp"

                android:layout_marginTop="422dp"
                android:background="#4286f4"
                android:fontFamily="sans-serif-condensed"

                android:shadowRadius="5"
                android:text="i"
                android:textColor="#FFFFFF"
                android:textSize="25sp"
                android:visibility="visible"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textopass"
                android:layout_width="182dp"
                android:layout_height="51dp"
                android:text="La contraseña debe contener una letra mayúscula, minúscula y un número"
                android:textColor="#e00000"
                android:visibility="invisible"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="426dp"
                android:layout_marginLeft="71dp"
                app:layout_constraintLeft_toLeftOf="parent" />

            <TextView
                android:id="@+id/textoemail"
                android:layout_width="182dp"
                android:layout_height="51dp"
                android:text="Este E-mail ya está registrado"
                android:textColor="#e00000"
                android:visibility="invisible"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="426dp"
                android:layout_marginLeft="64dp"
                app:layout_constraintLeft_toLeftOf="parent" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="351dp"
                android:layout_height="87dp"
                app:srcCompat="@drawable/logoReparaSevilla"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="8dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginRight="8dp"
                app:layout_constraintRight_toRightOf="parent" />

        </android.support.constraint.ConstraintLayout>



    </ScrollView>


</LinearLayout>
