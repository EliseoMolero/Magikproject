<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent" android:layout_width="match_parent" android:orientation="vertical"   xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context="com.example.ignacio.formularioopciones.MainActivity">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                android:text="Opciones del Usuario"
                android:textSize="30dp"
                android:textColor="#003d72"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.03"
                android:id="@+id/textView5" />

            <ImageView
                android:id="@+id/fotoperfilview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="142dp"
                android:layout_marginTop="70dp"
                android:src="@drawable/fotoperfil"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="70dp"
                android:text="Foto de Perfil:"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/botonfoto"
                android:layout_width="77dp"
                android:layout_height="39dp"
                android:text="Editar"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="70dp"
                android:layout_marginRight="16dp"
                app:layout_constraintRight_toRightOf="parent" />

            <Button
                android:id="@+id/botonemail"
                android:layout_width="77dp"
                android:layout_height="39dp"
                android:text="Editar"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="180dp"
                android:layout_marginRight="16dp"
                app:layout_constraintRight_toRightOf="parent" />

            <Button
                android:id="@+id/botonpass"
                android:layout_width="77dp"
                android:layout_height="39dp"
                android:text="Editar"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="226dp"
                android:layout_marginRight="16dp"
                app:layout_constraintRight_toRightOf="parent" />

            <Button
                android:id="@+id/botonnombre"
                android:layout_width="77dp"
                android:layout_height="39dp"
                android:text="Editar"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="323dp"
                android:layout_marginRight="16dp"
                app:layout_constraintRight_toRightOf="parent" />

            <Button
                android:id="@+id/botonapellidos"
                android:layout_width="77dp"
                android:layout_height="39dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="371dp"
                android:text="Editar"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/emailtxt"
                android:layout_width="130dp"
                android:layout_height="40dp"
                android:ems="10"
                android:enabled="false"
                android:inputType="textEmailAddress"
                android:layout_marginLeft="140dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="180dp" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email:"
                android:layout_marginLeft="7dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="195dp" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contraseña:"
                android:layout_marginLeft="7dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="240dp" />

            <EditText
                android:id="@+id/passtxt"
                android:layout_width="130dp"
                android:layout_height="40dp"
                android:ems="10"
                android:enabled="false"
                android:inputType="textPassword"
                android:layout_marginLeft="140dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="226dp" />

            <EditText
                android:id="@+id/compasstxt"
                android:layout_width="130dp"
                android:layout_height="40dp"
                android:ems="10"
                android:enabled="false"
                android:inputType="textPassword"
                android:layout_marginLeft="140dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="274dp" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Confirmar Contraseña:"
                android:textSize="12dp"
                android:layout_marginLeft="7dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="292dp" />

            <EditText
                android:id="@+id/nombretxt"
                android:layout_width="130dp"
                android:layout_height="40dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:text=""
                android:enabled="false"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="323dp"
                android:layout_marginLeft="140dp"
                app:layout_constraintLeft_toLeftOf="parent" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre:"
                android:layout_marginLeft="7dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="338dp" />

            <EditText
                android:id="@+id/apellidostxt"
                android:layout_width="130dp"
                android:layout_height="40dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:text=""
                android:enabled="false"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="371dp"
                android:layout_marginLeft="140dp"
                app:layout_constraintLeft_toLeftOf="parent" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Apellidos:"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="387dp"
                android:layout_marginLeft="7dp"
                app:layout_constraintLeft_toLeftOf="parent" />

            <Button
                android:id="@+id/botonguardar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Guardar cambios"
                android:enabled="false"
                android:background="#00a002"
                android:textColor="#000000"
                android:layout_marginRight="16dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="427dp" />

            <TextView
                android:id="@+id/textopass"
                android:layout_width="182dp"
                android:layout_height="51dp"
                android:text="La contraseña debe contener una letra mayúscula, minúscula y un número"
                android:textColor="#e00000"
                android:visibility="invisible"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="424dp"
                android:layout_marginLeft="16dp"
                app:layout_constraintLeft_toLeftOf="parent" />

            <TextView
                android:id="@+id/textoemail"
                android:layout_width="182dp"
                android:layout_height="51dp"
                android:text="Este E-mail ya está registrado"
                android:textColor="#e00000"
                android:visibility="invisible"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="424dp"
                android:layout_marginLeft="16dp"
                app:layout_constraintLeft_toLeftOf="parent" />


        </android.support.constraint.ConstraintLayout>

    </ScrollView>
</LinearLayout>